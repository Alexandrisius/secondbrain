{
  "name": "neurocanvas",
  "version": "1.0.7",
  "private": true,
  "description": "AI-powered visual canvas for building prompts and knowledge graphs",
  "author": "NeuroCanvas Team",
  "license": "MIT",
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron:dev": "concurrently -k \"cross-env NODE_ENV=development npm run dev\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "electron:build:all": "npm run build && electron-builder --win --mac --linux",
    "electron:publish": "npm run build && dotenv -- electron-builder --win --publish always",
    "electron:publish:mac": "npm run build && dotenv -- electron-builder --mac --publish always",
    "electron:publish:linux": "npm run build && dotenv -- electron-builder --linux --publish always",
    "postinstall": "electron-builder install-app-deps",
    "icon:generate": "electron-icon-builder --input=electron/icon.png --output=electron"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.4",
    "@xyflow/react": "^12.10.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "detect-port": "^1.6.1",
    "dexie": "^4.2.1",
    "electron-updater": "^6.6.2",
    "immer": "^11.0.1",
    "lucide-react": "^0.556.0",
    "next": "14.2.33",
    "react": "^18",
    "react-dom": "^18",
    "react-markdown": "^10.1.0",
    "react-textarea-autosize": "^8.5.9",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "zundo": "^2.3.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "dotenv-cli": "^11.0.0",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "electron-icon-builder": "^2.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.33",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  }
}
